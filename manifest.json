{
  "manifest_version": 3,
  "name": "Flowmate + Flow Club Sync",
  "description": "Sync your Flow Club session timer with Flowmateâ€™s ADHD-friendly productivity timer on flowmate.club.",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://in.flow.club/*",
    "https://flowmate.club/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://in.flow.club/*"],
      "js": ["flowclub.content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://flowmate.club/*"],
      "js": ["flowmate.content.js"],
      "run_at": "document_idle"
    }
  ]
}