{
  "manifest_version": 3,
  "name": "Flow Club Companion: Focus Audio",
  "description": "Audio companion for Flow Club with gentle ticking and clear voice minute announcements to support focus and time awareness.",
  "version": "1.0.1",
  "permissions": ["storage"],
  "host_permissions": [
    "https://in.flow.club/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flow Club Focus Audio Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://in.flow.club/*"],
      "js": ["flowclub.content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["audio/**/*.mp3", "audio/**/*.m4a"],
      "matches": ["https://in.flow.club/*"]
    }
  ]
}