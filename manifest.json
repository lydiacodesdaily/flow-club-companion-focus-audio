{
  "manifest_version": 3,
  "name": "Flow Club Companion",
  "description": "A gentle companion for Flow Club sessions with customizable focus audio and simple task lists to support time awareness and focus.",
  "version": "1.1.7",
  "permissions": ["storage", "windows"],
  "host_permissions": [
    "https://in.flow.club/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flow Club Companion"
  },
  "content_scripts": [
    {
      "matches": ["https://in.flow.club/*"],
      "js": ["browser-api.js", "flowclub.content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["audio/*"],
      "matches": ["https://in.flow.club/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "flow-club-companion@lydiastud.io",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
